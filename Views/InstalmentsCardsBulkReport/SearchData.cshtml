@using Instalments.Models;
@{
    Layout = null;

}
@model List<FileMasterInstalmentsCreateBulk>

<table id="tbDataList" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th class="text-center">Xem chi tiết<br /></th>
            <th class="text-center">Mã KQ duyệt<br /></th>
            <th class="text-center">Thông báo KQ duyệt<br /></th>
            <th class="text-center">Tên file<br /></th>
            <th class="text-center">File chứng từ<br /></th>
            <th class="text-center">Tổng số dòng<br /></th>
            <th class="text-center">Số dòng thành công<br /></th>
            <th class="text-center">Số dòng không thành công<br /></th>
            <th class="text-center">ĐV upload<br /></th>
            <th class="text-center">Người tạo<br /></th>
            <th class="text-center">Ngày tạo<br /></th>
            <th class="text-center">Người duyệt<br /></th>
            <th class="text-center">Ngày duyệt<br /></th>
            <th class="text-center">Remark<br /></th>
            <th class="text-center">Lý do từ chối<br /></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td>
                    <a href="javascript:void(0);" class="detailItem" onclick="doViewDetail('@item.UUID')"> Xem chi tiết</a>
                </td>
                <td>@item.RESULT_CODE</td>
                <td>@item.RESULT_MESSAGE</td>
                <td>@item.FILE_NAME</td>

                <td>
                    @if (item.LIST_ATTACHMENT_NAME != null && item.LIST_ATTACHMENT_NAME.Count > 0)
                    {
                        foreach (var att in item.LIST_ATTACHMENT_NAME)
                        {
                            if (!String.IsNullOrEmpty(att))
                            {
                                var url = item.ATTACHMENT_PATH + att.Trim();
                                <a href='@url' class="pdfUpload" target="_blank" style="overflow-x: hidden;">@att</a><br />
                            }
                        }
                    }
                </td>
                <td>@item.TOTAL_ROW</td>
                <td>@item.TOTAL_ROW_SUCCESS</td>
                <td>@item.TOTAL_ROW_FAIL</td>
                <td>@item.CREATE_BRANCH</td>
                <td>@item.CREATE_USER</td>
                <td>@item.CREATE_DATE</td>
                <td>@item.APPROVE_USER</td>
                <td>@item.APPROVE_DATE</td>
                <td>@item.REMARK</td>
                <td>@item.REJECT_REASON</td>
            </tr>
        }
        @for (int i = Model.Count; i < 10; i++)
        {
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
        }
    </tbody>
</table>

